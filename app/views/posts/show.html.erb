<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Date</strong>
  <%= @post.creation_time.strftime("%d.%m.%Y %H:%M")  %>
</p>

<p>
  <strong>Author</strong>
  <%= @post.user.email %>
</p>


<% if user_signed_in? %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>

<%= link_to 'Back', posts_path %>
